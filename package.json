{
  "name": "tslint-folders",
  "version": "0.1.19",
  "description": "Custom TSLint rules for checking imports between packages and their folders",
  "author": "Sean Ryan",
  "main": "dist/",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^8.0.53",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "tslint": "^5.9.1",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "clean-sourcemaps": "rm -rf dist/*.js.map && rm -rf dist/**/*.js.map",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json --format msbuild",
    "test": "tslint --test test/rules/**/tslint.json && yarn docs:test",
    "test-one": "tslint --test test/rules/tslint-folders-file-names/**/tslint.json",
    "start": "yarn clean && yarn build && yarn test && yarn lint",
    "pub": "yarn clean && yarn build && yarn publish --patch",
    "pub-prepare-no-source": "yarn clean && yarn build && yarn clean-sourcemaps && cd dist && cp ../readme.md . && cp ../package.json .",
    "docs": "node -r ts-node/register src/tools/docsGenerator/index.ts",
    "docs:test": "node -r ts-node/register src/tools/docsGenerator/index.ts ./tslint.tslint-folders.json Text"
  },
  "repository": {
    "type": "git",
    "url": "https://str@bitbucket.org/str/tslint-folders.git"
  },
  "dependencies": {
    "ts-node": "^7.0.1"
  },
  "keywords": [
    "tslint",
    "architecture",
    "structure",
    "static code analysis",
    "code analysis",
    "disabled tests",
    "dependencies"
  ]
}
