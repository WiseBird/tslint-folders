{
  "name": "tslint-folders",
  "version": "0.4.13",
  "description": "Custom TSLint rules for checking imports between packages and their folders, and generating relevant diagrams.",
  "author": "Sean Ryan",
  "main": "dist/",
  "license": "MIT",
  "devDependencies": {
    "@types/lodash": "^4.14.117",
    "@types/node": "8.10.37",
    "lodash": "^4.17.11",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "tslint": ">=5.9.1 || >=^5.11.0",
    "typescript": ">=2.1.0 || >=2.1.0-dev || >=2.2.0-dev || >=2.3.0-dev || >=2.4.0-dev || >=2.5.0-dev || >=2.6.0-dev || >=2.7.0-dev || >=2.8.0-dev || >=2.9.0-dev"
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "clean-sourcemaps": "rm -rf dist/*.js.map && rm -rf dist/**/*.js.map",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json --format msbuild",
    "test": "tslint --test test/rules/**/tslint.json && yarn docs:test && yarn docs:test-no-subfolders && yarn docs:test-dot && yarn docs:test-dot-no-subfolders",
    "test-one": "tslint --test test/rules/tsf-folders-disabled-test/**/tslint.json",
    "start": "yarn clean && yarn build && yarn test && yarn lint",
    "pub": "yarn clean && yarn build && yarn publish --patch",
    "pub-prepare-no-source": "yarn clean && yarn build && yarn clean-sourcemaps && cd dist && cp ../readme.md . && cp ../package.json .",
    "docs": "node -r ts-node/register src/tools/docsGenerator/index.ts",
    "docs:test": "node -r ts-node/register src/tools/docsGenerator/index.ts ./tslint.tslint-folders.json Text",
    "docs:test-no-subfolders": "node -r ts-node/register src/tools/docsGenerator/index.ts ./tslint.tslint-folders.json Text -skipSubFolders",
    "docs:test-dot": "node -r ts-node/register src/tools/docsGenerator/index.ts ./tslint.tslint-folders.json Dot",
    "docs:test-dot-no-subfolders": "node -r ts-node/register src/tools/docsGenerator/index.ts ./tslint.tslint-folders.json Dot -skipSubFolders"
  },
  "repository": {
    "type": "git",
    "url": "https://str@bitbucket.org/str/tslint-folders.git"
  },
  "dependencies": {},
  "keywords": [
    "tslint",
    "folders",
    "checker",
    "architecture",
    "structure",
    "analysis",
    "disabled tests",
    "static code analysis",
    "code analysis",
    "dependencies",
    "diagram"
  ]
}
